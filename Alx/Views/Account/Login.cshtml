@model Alx.Models.LoginModel

@{
    ViewBag.Title = "Autentifica-te";
}

@*<hgroup class="title">
        <h3>@ViewBag.Title.</h3>
    </hgroup>*@
<div class="row">
    <div class="col-md-6">
        <section id="loginForm">
            @*<h2>Use a local account to log in.</h2>*@
            <div class="row">
                &nbsp;
            </div>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-9">
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationSummary(true)
                        </div>
                    </div>
                </div>
                @*<i>@Html.ValidationSummary(true)</i>*@
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-user"></i></span>
                            @*@Html.LabelFor(m => m.UserName)*@
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-lock"></i></span>
                            @*glyphicon glyphicon-qrcode*@
                            @*@Html.LabelFor(m => m.Password)*@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    <div class="col-md-1">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                    <div class="col-md-8">
                        <span style="display:inline;">Remember me?</span>
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Login
                        </button>
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    <div class="col-md-8">
                        @Html.ActionLink("Register", "Register") if you don't have an account.
                    </div>
                </div>
            }
        </section>
        <script src="~/Scripts/jquery-2.1.3.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('form').addClass("");
            });

        </script>
    </div>
    <div class="col-md-6">
        <section class="social" id="socialLoginForm">
            <h4>Foloseste alt cont pentru a te loga.</h4>
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>


